{
  "name": "root-trips-cli",
  "version": "1.0.0",
  "description": "A cli app to parse and calculate driver and trip information",
  "main": "index.js",
  "bin": "bin/root-trips",
  "scripts": {
    "test": "mocha"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "warn",
        "double"
      ],
      "padded-blocks": 0,
      "curly": [
        "error",
        "multi-line"
      ]
    }
  }
}
